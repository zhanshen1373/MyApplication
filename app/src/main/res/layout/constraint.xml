    <TextView
        android:id="@+id/constraintlayout_tv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2222222222222222222222222222222222222222222我是徐凤年哒哒哒阿达呼唤风正大冷不冷啊天气预报1111111111111111111111"
        android:layout_marginLeft="10dp"
