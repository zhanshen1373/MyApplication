<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/simple_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@android:drawable/alert_dark_frame"
        android:layout_marginStart="20dp"/>

    <CheckBox
        android:id="@+id/simple_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        app:layout_constraintCircle="@id/simple_imageview"
        app:layout_constraintCircleAngle="80"
        app:layout_constraintCircleRadius="80dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/simple_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/simple_checkbox"
        app:layout_constraintLeft_toLeftOf="@id/simple_checkbox"
        app:layout_constraintRight_toRightOf="@id/simple_checkbox"
        android:layout_marginTop="5dp"
        tools:text="@string/hello_world" />

</androidx.constraintlayout.widget.ConstraintLayout>